<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trans.pixel.model.mapper.UserEquipPokedeMapper">

	<resultMap id="resultMap" type="com.trans.pixel.model.userinfo.UserEquipPokedeBean">
		<result property="userId" column="user_id" />
		<result property="itemId" column="item_id" />
		<result property="level" column="level" />
		<result property="order" column="orderid" />
		<result property="endTime" column="end_time" />
		<result property="display" column="display" />
	</resultMap>
	
	<select id="selectUserEquipPokede" resultMap="resultMap">
		SELECT *
		from user_equippokede where user_id=#{userId} and item_id=#{itemId}
	</select>
	
	<insert id="updateUserEquipPokede" parameterType="com.trans.pixel.model.userinfo.UserEquipPokedeBean">
	    INSERT INTO user_equippokede(user_id, item_id, level, orderid, end_time, display)
	    VALUES(#{userId}, #{itemId}, #{level}, #{order}, #{endTime}, #{display})
	    ON 
	    duplicate key update
	    level=#{level}, orderid=#{order}, end_time=#{endTime}, display=#{display}
	</insert>
	
	<select id="selectUserEquipPokedeList" parameterType="long" resultMap="resultMap">
		SELECT *
		from user_equippokede where user_id=#{userId}
	</select>
	
</mapper>