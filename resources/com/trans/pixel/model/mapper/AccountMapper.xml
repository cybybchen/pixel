<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trans.pixel.model.mapper.AccountMapper">

	<select id="queryUserId" resultType="long">
	    SELECT * from account where server_id=#{serverId} and account=#{account}
	</select>
	
	<insert id="registerAccount" useGeneratedKeys="true" keyProperty="id" parameterType="com.trans.pixel.model.AccountBean">
	    INSERT INTO account(server_id, account) 
	    VALUES(#{serverId}, #{account})
	</insert>
	
</mapper>