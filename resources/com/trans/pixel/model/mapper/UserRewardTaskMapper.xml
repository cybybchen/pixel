<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trans.pixel.model.mapper.UserRewardTaskMapper">

	<resultMap id="resultMap" type="com.trans.pixel.model.userinfo.UserRewardTaskBean">
<!-- 		<id property="id" column="id" /> -->
		<result property="userId" column="user_id" />
<!-- 		<result property="rewardTaskId" column="reward_task_id" /> -->
<!-- 		<result property="rewardTaskIndex" column="reward_task_index" /> -->
<!-- 		<result property="enemyId" column="enemy_id" /> -->
		<result property="eventid" column="eventid" />
<!-- 		<result property="status" column="status" /> -->
		<result property="isOver" column="is_over" />
	</resultMap>
	
	<update id="updateUserRewardTask" parameterType="com.trans.pixel.model.userinfo.UserRewardTaskBean">
		INSERT INTO user_rewardtask(user_id, eventid, is_over)
	    VALUES(#{userId}, #{eventid}, #{isOver})
		ON 
	    duplicate key update
	    eventid=#{eventid}, is_over=#{isOver}
	</update>
	
	<select id="selectUserRewardTaskList" parameterType="long" resultMap="resultMap">
		SELECT *
		from user_rewardtask where user_id=#{userId}
	</select>
	
	<select id="selectUserRewardTask" resultMap="resultMap">
		SELECT *
		from user_rewardtask where user_id=#{userId} and reward_task_index=#{rewardTaskIndex}
	</select>
	
</mapper>