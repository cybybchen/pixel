<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trans.pixel.model.mapper.UserTeamMapper">

	<resultMap id="resultMap" type="com.trans.pixel.model.userinfo.UserTeamBean">
		<id property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="teamRecord" column="record" />
		<result property="rolePosition" column="role_position" />
		<result property="engine" column="engine" />
		<result property="talentId" column="talent_id" />
		<result property="talentEquip" column="talent_equip" />
		<result property="heroEquip" column="hero_equip" />
	</resultMap>
	
