	    INSERT INTO user_team(user_id, record, compose_skill)
	    VALUES(#{userId}, #{teamRecord}, #{composeSkill})
	</insert> -->
	
	<!-- <insert id="delUserTeam">
	    DELETE
		from user_team where id=#{id}
	</insert> -->
	
	<update id="updateUserTeam" parameterType="com.trans.pixel.model.userinfo.UserTeamBean">
		INSERT INTO user_team(user_id, id, record, role_position, engine, talent_id, talent_equip, hero_equip)
	    VALUES(#{userId}, #{id}, #{teamRecord}, #{rolePosition}, #{engine}, #{talentId}, #{talentEquip}, #{heroEquip})
		ON 
	    duplicate key update
	    record=#{teamRecord}, role_position=#{rolePosition}, engine=#{engine}, talent_id=#{talentId},
	    talent_equip=#{talentEquip}, hero_equip#{heroEquip}
	</update>
	
	<select id="selectUserTeamList" parameterType="long" resultMap="resultMap">
		SELECT *
		from user_team where user_id=#{userId}
	</select>
	
</mapper>